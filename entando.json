{
    "microservices": [
        {
            "name": "my-service",
            "stack": "spring-boot",
            "healthCheckPath": "/health"
        },
        {
            "name": "another-ms",
            "stack": "spring-boot",
            "healthCheckPath": "/health",
            "commands": {
                "run": "mvn -Dspring-boot.run.arguments=\"--server.port=8082\" spring-boot:run"
            }
        }
    ],
    "microfrontends": [
        {
            "name": "jeff-mfe",
            "customElement": "jeff-mfe",
            "stack": "react",
            "type": "app-builder",
            "group": "free",
            "nav": [
                {
                    "label": {
                        "en": "Content Template",
                        "it": "Content Template"
                    },
                    "target": "app-builder",
                    "url": "/content-template"
                }
            ],
            "slot": "content",
            "paths": [
                "/content-template"
            ],
            "apiClaims": []
        },
        {
            "name": "another-mfe",
            "customElement": "another-mfe",
            "stack": "react",
            "type": "widget",
            "group": "free",
            "titles": {
                "en": "Another MFE",
                "it": "Un altro MFE"
            },
            "contextParams": [
                "page_code"
            ],
            "commands": {
                "run": "npm install && PORT=3001 npm start"
            },
            "apiClaims": [
                {
                    "name": "int-api",
                    "type": "internal",
                    "serviceName": "another-ms"
                },
                {
                    "name": "ext-api",
                    "type": "external",
                    "serviceName": "simple-ms",
                    "bundle": "registry.hub.docker.com/cecchisandrone/entando-simple-bundle"
                }
            ],
            "params": [
                {
                    "name": "username",
                    "description": "username of user"
                },
                {
                    "name": "description",
                    "description": "description of user"
                }
            ],
            "configMfe": "another-mfe-config"
        },
        {
            "name": "another-mfe-config",
            "customElement": "another-mfe-config",
            "stack": "react",
            "type": "widget-config",
            "group": "free",
            "commands": {
                "run": "npm install && PORT=3002 npm start"
            }
        }
    ],
    "name": "jeff-bundle",
    "description": "This is an awesome bundle",
    "version": "0.0.1",
    "type": "bundle",
    "svc": [
        "mysql",
        "keycloak"
    ],
    "global": {
        "nav": [
            {
                "label": {
                    "en": "Dashboard",
                    "it": "Dashboard"
                },
                "target": "platform",
                "url": "/dashboard"
            }
        ]
    }
}